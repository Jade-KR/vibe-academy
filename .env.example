# ===========================================
# vibePack Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# cp .env.example .env.local

# -------------------------------------------
# App Configuration
# -------------------------------------------
NEXT_PUBLIC_APP_NAME="vibePack"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DESCRIPTION="Your SaaS Boilerplate"

# -------------------------------------------
# Supabase
# -------------------------------------------
# Supabase project URL (Settings > API)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
# Supabase anon key (public)
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
# Supabase service role key (server-only, never expose)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# -------------------------------------------
# Database (Drizzle)
# -------------------------------------------
# Supabase Database URL (Settings > Database)
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres"

# -------------------------------------------
# OAuth Providers (configure in Supabase)
# -------------------------------------------
# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# -------------------------------------------
# Polar (Payments)
# -------------------------------------------
POLAR_ACCESS_TOKEN=""
POLAR_ORGANIZATION_ID=""
POLAR_WEBHOOK_SECRET=""
NEXT_PUBLIC_POLAR_CHECKOUT_URL=""

# -------------------------------------------
# Resend (Email)
# -------------------------------------------
RESEND_API_KEY=""
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# -------------------------------------------
# Sentry
# -------------------------------------------
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""
SENTRY_ORG=""
SENTRY_PROJECT=""

# -------------------------------------------
# Analytics
# -------------------------------------------
NEXT_PUBLIC_GA_MEASUREMENT_ID=""

# -------------------------------------------
# Channel Talk
# -------------------------------------------
NEXT_PUBLIC_CHANNEL_TALK_PLUGIN_KEY=""

# -------------------------------------------
# App Settings
# -------------------------------------------
# Default locale: ko | en
NEXT_PUBLIC_DEFAULT_LOCALE="ko"
